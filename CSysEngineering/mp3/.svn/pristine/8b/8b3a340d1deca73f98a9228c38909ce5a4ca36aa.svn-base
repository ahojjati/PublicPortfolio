 */
int32_t _close (int32_t fd)
{
printf("assembly linkage works for _close");
	if(fd <= 1 || fd > 7)
		return -1;
	((current_process->fid)[fd]).fops = NULL;
	((current_process->fid)[fd]).inode = NULL;
	((current_process->fid)[fd]).offs = 0;
	((current_process->fid)[fd]).flags = 0;
	return 0;
}
